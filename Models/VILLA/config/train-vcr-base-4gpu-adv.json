{
    "train_txt_dbs": ["/txt/vcr_train.db/"],
    "train_img_dbs": ["/img/vcr_gt_train/;/img/vcr_train/"],
    "val_txt_db": "/txt/vcr_val.db/",
    "val_img_db": "/img/vcr_gt_val/;/img/vcr_val/",
    "checkpoint": "/pretrain/villa-base-vcr-2nd-stage.pt",
    "checkpoint_from": "vcr_pretrain",
    "model_config": "/src/config/uniter-base.json",
    "output_dir": "/storage/vcr/default",
    "max_txt_len": 220,
    "conf_th": 0.2,
    "max_bb": 100,
    "min_bb": 10,
    "num_bb": 36,
    "train_batch_size": 4000,
    "val_batch_size": 10,
    "gradient_accumulation_steps": 5,
    "learning_rate": 6e-05,
    "valid_steps": 1000,
